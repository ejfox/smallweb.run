{
    "json.schemas": [
        {
            "fileMatch": [
                "smallweb.json",
                "smallweb.jsonc"
            ],
            "url": "https://schemas.smallweb.run/manifest"
        },
        {
            "fileMatch": [
                ".smallweb/config.json",
                ".smallweb/config.jsonc"
            ],
            "url": "https://schemas.smallweb.run/config"
        }
    ],
    "deno.enable": true,
    "deno.disablePaths": [
        "astro"
    ],
    "search.useIgnoreFiles": false,
    "search.exclude": {
        "**/_site": true,
        "**/dist": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "docs": true,
    }
}
